# Environment Configuration Template
# Copy this file to .env.development, .env.homologation, or .env.production

# Application Environment (development | homologation | production)
NODE_ENV=development

# Application Configuration
APP_NAME=EACE Backend Dashboard
APP_VERSION=0.0.1
APP_DESCRIPTION=EACE Backend Dashboard API

# Server Configuration
PORT=3000
HOST=localhost

# API Configuration
API_PREFIX=api
API_VERSION=v1

# CORS Configuration
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_CREDENTIALS=true

# Swagger Configuration (only for development and homologation)
SWAGGER_ENABLED=true
SWAGGER_PATH=docs
SWAGGER_TITLE=EACE Backend Dashboard API
SWAGGER_DESCRIPTION=API documentation for EACE Backend Dashboard
SWAGGER_VERSION=1.0.0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in
JWT_EXPIRES_IN=168h

# Database Configuration
DATABASE_URL=postgresql://eace_user:eace_password@localhost:5432/eace_backend_dashboard
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=eace_user
DATABASE_PASSWORD=eace_password
DATABASE_NAME=eace_backend_dashboard
DATABASE_SYNC=false
DATABASE_LOGGING=true

# Redis Configuration (example for future use)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=100

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=168h

# Alarm Cleanup Configuration
# Número de horas após o qual os alarmes atualizados serão excluídos
ALARM_CLEANUP_HOURS=24
